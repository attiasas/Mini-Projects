<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="165.0" prefWidth="353.0" stylesheets="@BoxStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.GenerateController">
   <top>
      <Label alignment="CENTER" styleClass="label-title" text="Create New Board" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="b_Generate" mnemonicParsing="false" onAction="#submitRequest" text="Generate" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane alignment="CENTER" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.80000762939454" minWidth="10.0" prefWidth="226.39998779296874" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="223.99999999999997" minWidth="10.0" prefWidth="108.00001220703123" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Number Of Rows:">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Label>
                  <Label text="Number Of Columns:" GridPane.rowIndex="1" />
                  <TextField fx:id="tf_Row" alignment="BASELINE_RIGHT" onInputMethodTextChanged="#checkRow" onKeyPressed="#checkRow" onKeyReleased="#checkRow" onKeyTyped="#checkRow" GridPane.columnIndex="1" />
                  <TextField fx:id="tf_Column" alignment="BASELINE_RIGHT" onInputMethodTextChanged="#checkColumn" onKeyPressed="#checkColumn" onKeyReleased="#checkColumn" onKeyTyped="#checkColumn" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2">
                     <children>
                        <CheckBox fx:id="cb_3D" mnemonicParsing="false" onAction="#set3DMode" text="3D Board">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </CheckBox>
                        <Separator orientation="VERTICAL">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                        </Separator>
                        <Label fx:id="layerText" disable="true" text="Number Of Layers:" />
                     </children>
                  </HBox>
                  <TextField fx:id="tf_Layer" alignment="BASELINE_RIGHT" disable="true" onInputMethodTextChanged="#checkLayer" onKeyPressed="#checkLayer" onKeyReleased="#checkLayer" onKeyTyped="#checkLayer" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </GridPane>
         </children>
      </VBox>
   </center>
</BorderPane>
